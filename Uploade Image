//Controlller Code

[HttpPost]
public ActionResult UploadImage(FileUploadTable objFileUploadTable)
{
    string fileName = Path.GetFileNameWithoutExtension(objFileUploadTable.ImageFile.FileName);
    string extension = Path.GetExtension(objFileUploadTable.ImageFile.FileName);
    fileName = fileName + DateTime.Now.ToString("yymmssfff") + extension;
    objFileUploadTable.ImagePath = "~/UplodaImages/" + fileName;
    fileName = Path.Combine(Server.MapPath("~/UplodaImages/" + fileName));
    objFileUploadTable.ImageFile.SaveAs(fileName);

using (DemoAngularJsTestDbEntities db = new DemoAngularJsTestDbEntities())
{
  db.FileUploadTables.Add(objFileUploadTable);
  db.SaveChanges();
  }
  ModelState.Clear();
  return View();
}

// Model
public partial class FileUploadTable
  {
    public long DocID { get; set; }
    public string Title { get; set; }
    public string ImagePath { get; set; }
    public HttpPostedFileBase ImageFile { set; get; }
  }

//database script

CREATE TABLE [dbo].[FileUploadTable](
	[DocID] [bigint] IDENTITY(1,1) primary key,
	[Title] [varchar](max) NULL,
	[ImagePath] [varchar](max) NULL
  )

